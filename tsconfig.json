{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2016",
		"jsx": "preserve",
		"strictFunctionTypes": true,
		"sourceMap": true,
		"noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"outDir": "./js"
	}
}