{
	"compilerOptions": {
		"module": "commonJS",
		"target": "es2018",
		"jsx": "preserve",
		"strictFunctionTypes": true,
		"sourceMap": false,
		"noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [ "/node_modules/@types/" ],
		"outDir": "./js",
		"allowUmdGlobalAccess": true
	}
}