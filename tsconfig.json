{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"jsx": "preserve",
		"strictFunctionTypes": true,
		"sourceMap": true,
		"noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"typeRoots": [ "/node_modules/@types/" ],
		"outDir": "./js"
	}
}